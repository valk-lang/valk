test "String: sub strings" {
    //
    assert("abğŸ”cd".byte(0) == 'a')
    assert("abğŸ”cd".byte(1) == 'b')
    assert("abğŸ”cd".byte_end(0) == 'd')
    assert("abğŸ”cd".byte_end(1) == 'c')
    //
    assert("abğŸ”cd".char(0) == "a")
    assert("abğŸ”cd".char(1) == "b")
    assert("abğŸ”cd".char_end(0) == "d")
    assert("abğŸ”cd".char_end(1) == "c")
    //
    assert("".sub_str(0, 1) == "")
    assert("".sub_str(1, 1) == "")
    assert("abğŸ”cd".sub_str(1, 1) == "b")
    assert("abğŸ”cd".sub_str(3, 1) == "c")
    assert("abğŸ”cd".sub_str(1, 3) == "bğŸ”c")
    assert("abğŸ”cd".sub_str(1, 10) == "bğŸ”cd")
    //
    assert("".byte_sub_str(0, 1) == "")
    assert("".byte_sub_str(1, 1) == "")
    assert("abğŸ”cd".byte_sub_str(1, 1) == "b")
    assert("abğŸ”cd".byte_sub_str(6, 1) == "c")
    assert("abğŸ”cd".byte_sub_str(1, 6) == "bğŸ”c")
    assert("abğŸ”cd".byte_sub_str(1, 10) == "bğŸ”cd")
}
