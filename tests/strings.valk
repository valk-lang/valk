
test "String: concat" {
    assert("test" + " " + "concat" == "test concat")
}

test "String: auto convert integers to string" {
    let n1 : String = -10203
    assert(n1 == "-10203")
    let n2 : String = 10203
    assert(n2 == "10203")
    let n3 : String = (31).to_hex()
    assert(n3 == "1F")
}

