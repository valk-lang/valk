test "String: starts/ends with" {
    assert("abc".starts_with("abc"))
    assert("abc".starts_with("ab"))
    assert("abc".starts_with(""))
    assert("abc".ends_with("abc"))
    assert("abc".ends_with("bc"))
    assert("abc".ends_with(""))
    assert("".ends_with(""))
    // Invalid
    assert(!"abc".starts_with("c"))
    assert(!"abc".starts_with("b"))
    assert(!"abc".ends_with("a"))
    assert(!"abc".ends_with("b"))
    assert(!"".ends_with("e"))
}

test "String: length" {
    assert("".bytes == 0)
    assert("".utf8.length == 0)
    assert("abc".bytes == 3)
    assert("abc".utf8.length == 3)
    assert("ağŸ”c".bytes == 6)
    assert("ağŸ”c".utf8.length == 3)
}

test "String: index of" {
    assert(("ağŸ”c".index_of("") !? 999) == 0)
    assert(("ağŸ”c".utf8.index_of("") !? 999) == 0)
    assert(("ağŸ”c".index_of("c") !? 0) == 5)
    assert(("ağŸ”c".utf8.index_of("c") !? 0) == 2)
    assert(("ağŸ”c".index_of_byte('c') !? 0) == 5)
}

test "String: split" {
    let str = "a=ğŸ”=b"
    let s = str.split("=")
    assert(s.length == 3)
    assert((s.get(0) !? "_") == "a")
    assert((s.get(1) !? "_") == "ğŸ”")
    assert((s.get(2) !? "_") == "b")
    // too long
    s = str.split("valkvalkvalk")
    assert(s.length == 1)
    assert((s.get(0) !? "_") == str)
    // not found
    s = str.split("~")
    assert(s.length == 1)
    assert((s.get(0) !? "_") == str)
    // empty
    s = str.split("")
    assert(s.length == str.length)
    assert((s.get(0) !? "_") == "a")
    // next to eachother
    s = "==a==".split("=")
    assert(s.length == 5)
    assert((s.get(0) !? "_") == "")
    assert((s.get(1) !? "_") == "")
    assert((s.get(2) !? "_") == "a")
    assert((s.get(3) !? "_") == "")
    assert((s.get(4) !? "_") == "")
}

test "String: sub strings" {
    //
    assert("abğŸ”cd".get(0) == 'a')
    assert("abğŸ”cd".get(1) == 'b')
    assert("abğŸ”cd".utf8.get(0) == "a")
    assert("abğŸ”cd".utf8.get(1) == "b")
    assert("abğŸ”cd".utf8.get(2) == "ğŸ”")
    //
    assert("".substr(0, 1) == "")
    assert("".substr(1, 1) == "")
    assert("abğŸ”cd".utf8.substr(1, 1) == "b")
    assert("abğŸ”cd".utf8.substr(3, 1) == "c")
    assert("abğŸ”cd".utf8.substr(1, 3) == "bğŸ”c")
    assert("abğŸ”cd".utf8.substr(1, 10) == "bğŸ”cd")
    //
    assert("".substr(0, 1) == "")
    assert("".substr(1, 1) == "")
    assert("abğŸ”cd".substr(1, 1) == "b")
    assert("abğŸ”cd".substr(6, 1) == "c")
    assert("abğŸ”cd".substr(1, 6) == "bğŸ”c")
    assert("abğŸ”cd".substr(1, 10) == "bğŸ”cd")
    assert("\"abğŸ”\"".utf8.substr(1, 3) == "abğŸ”")
}

test "String: comparing" {
    assert("a" != "b")
    assert("a" != "")
    assert("" != "0")
    assert("" < "a")
    assert("a" < "b")
    assert("b" >= "b")
    assert("b" > "a")
    assert("a" <= "a")
    assert("" == "")
}

test "String: #STR" {
    assert(#STR(TEST) == "1")
}
