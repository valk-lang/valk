
test "Casting" {
    // Compiler must convert numbers to ptr types
    let v1 : ptr = 2 + 1
    let v2 = 0 @as ptr
    v2 = 2
    let v3 : uint = 1
    v2 += v3
    assert(v1 == v2)

    // upscale unsigned -> unsigned
    let v4 : u8 = 4
    let v5 : uint = 5
    let v6 = v4 + v5
    let v7 = v5 + v4
    // upscale unsigned -> signed 
    let v9 : u8 = 5
    let v10 : i16 = v9
    // Auto cast 0xf to u8
    let v11 : u8 = 0xf
    let v12 = 0xf + v11 // should become u8
    let v13 : u8 = v12 // check if u8
    assert(v12 == 0x1e)
}
