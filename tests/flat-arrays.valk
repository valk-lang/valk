
fn test_fa_arg(x: &[int x 3]) {
    x[0] = 10
    assert(x[1] == 2)
}
fn test_fa_rett() [int x 3] {
    return [1, 2, 5]
}

test "Flat arrays" {
    let a = [1, 2, 3]
    //
    test_fa_arg(a)
    assert(a[0] == 10)
    //
    test_fa_arg([1, 2, 3])
    //
    test_fa_arg(test_fa_rett())
    //
    let b = test_fa_rett()
    test_fa_arg(b)
    assert(b[0] == 10)
    assert(b[2] == 5)
}
