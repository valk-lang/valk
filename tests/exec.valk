
use valk:core

test "Exec" {

    let code, out = core:exec("echo \"hello\"") ! {
        assert(false)
        return
    }
    assert(code == 0)
    assert(out == "hello\n")

    (code, out) = core:exec("unknowncomanndtotestvalk") ! {
        assert(false)
        return
    }
    assert(code == 127)
}
