
fn vscope_err() int !err {
    throw err
}

test "Value scopes" {

    let a = <{
        return 1
    }
    let b = vscope_err() ? <{
        return 2
    }
    let c = vscope_err() ? <{
        // if true {
        //     return 3
        // } else {
        //     return 5
        // }
        return 4
    }

    assert(a == 1)
    assert(b == 2)
    assert(c == 4)
}
