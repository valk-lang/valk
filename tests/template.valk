
use valk:template
use valk:fs

test "Templates" {

    let data = object { 
        title: "Hello"
        content: object {
            msg: "World"
        }
    }

    let vdir = __DIR__ + "/assets/views"
    let result = template:render(vdir + "/pages/test-page.html", data, vdir) !? EMSG
    let expect = fs:read(vdir + "/expect/result-1.html") !? "-?-"

    assert(result == expect)
}