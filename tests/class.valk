
class ClassTest {
    value: int (5)

    get val : int {
        return this.value + 2
    }
    group sub {
        get val : int {
            return this.value + 20
        }
        static get stat : int {
            return 40
        }
    }
}

test "Class syntax" {
    let x = ClassTest{}
    assert(x.value == 5)
    assert(x.val == 7)
    assert(x.sub.val == 25)
    assert(ClassTest.sub.stat == 40)
}


mode X[T] for Array[T] {
    get size : uint { return this.length + 100 }
    fn first() T { return this.get(0) ! exit(1) }
}

test "Class mode" {
    let x : X[String] = X[String].new()
    let y : Array[String] = x
    assert(x.size == 100)
    assert(y.length == 0)
    x.push("hi")
    assert(x.size == 101)
    assert(y.length == 1)
}