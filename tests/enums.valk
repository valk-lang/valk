
enum Enum1 {
    a // 0
    b // 2
    c (5) // 5
    d (1) // 1
}

enum Enum2: String {
    a ("ax")
    b ("bx")
    c ("cx")
}

class Enum3 {
    e: Enum2
}

test "Enums" {
    let e1 = Enum1.a
    let e2 = Enum1.b
    let e3 = Enum1.c
    let e4 = Enum1.d

    assert(e1 == 0)
    assert(e2 == 2)
    assert(e3 == 5)
    assert(e4 == 1)

    assert(Enum1.a == 0)
    assert(Enum1.b == 2)
    assert(Enum1.c == 5)
    assert(Enum1.d == 1)

    assert(Enum2.a + Enum2.b + Enum2.c == "axbxcx")

    let e5 = Enum3{ e: Enum2.a }
    assert(e5.e == "ax")
    assert("ax" == e5.e)
    e5.e = Enum2.b
    assert(e5.e == "bx")
    assert("bx" == e5.e)
}