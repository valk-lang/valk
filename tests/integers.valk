
test "Endian read/write" {
    let x : u32 = 123
    let y : u32 = 29892034
    let z = u32.read_big_endian(@ref(x))
    u32.write_big_endian(z, @ref(y))
    assert(x == 123)
    assert(y == 123)

    x = 250
    y = 0
    z = u32.read_little_endian(@ref(x))
    u32.write_little_endian(z, @ref(y))
    assert(x == 250)
    assert(y == 250)
}

test "Hex / Octal" {
    assert(239 == 0xEF)
    assert(493 == 0c755)
}