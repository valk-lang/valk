
test "Floats" {
    let a = 0.5
    let b = 1.7
    let c = -5.2
    let d = -0.0
    let e = 10

    assert(a == "0.50")
    assert(b == "1.70")
    assert(c == "-5.20")
    assert(d == "0.00")
    assert(e == "10")

    let sum = a + b
    assert(sum == 2.2)
    sum += c
    assert(sum == -3)
    sum /= 3
    assert(sum == -1)
    sum += d
    assert(sum == -1)
    sum += e
    assert(sum == 9)
}