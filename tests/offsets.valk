
test "Offsets" {
    let arr = Array[uint].new()
    arr.push(0)
    arr.push(2)
    arr.push(4)

    assert(arr[0] == 0)
    assert(arr[1] == 2)
    assert(arr[2] == 4)
    assert(arr[3] == 0)

    arr[0] = 5
    arr[3] = 6
    arr[5] = 10
    assert(arr[0] == 5)
    assert(arr[3] == 6)
    assert(arr[5] == 0)
}
