
use valk:json

test "Json" {
    let str = "{ \"msg\": \"hello\", \"sub\": { \"msg\": \"world\" } }"
    let data = json:decode(str) ! {
        assert(false)
        return
    }
    assert(data.get("msg").string() == "hello")
    assert(data.get("sub").get("msg").string() == "world")

    let sub = data.get("sub")
    sub.set("msg", "modified")
    let enc = sub.encode()

    assert(enc == "{\"msg\":\"modified\"}")
}