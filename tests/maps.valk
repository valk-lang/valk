
use valk:type

test "Map: initialization & get-by-key" {
    // let m = map[String]{ "a" => "1", "b" => "2", "c" => "3" }
    let m = Map[String].new()
    m.set("a", "1")
    m.set("b", "2")
    m.set("c", "3")

    assert((m.get("a") !? "0") == "1")
    assert((m.get("b") !? "0") == "2")
    assert((m.get("c") !? "0") == "3")
    assert((m.get("d") !? "0") == "0")
}

test "HashMap" {
    let m = type:HashMap[String, String].new()
    m.set("a", "1")
    m.set("b", "2")
    m.set("c", "3")
    m.set("xy", "4")

    assert((m.get("a") !? "0") == "1")
    assert((m.get("b") !? "0") == "2")
    assert((m.get("c") !? "0") == "3")
    assert((m.get("d") !? "0") == "0")
    assert((m.get("x" + "y") !? "0") == "4")

    let m2 = type:HashMap[uint, String].new()
    m2.set(0, "1")
    m2.set(2, "2")
    m2.set(4, "3")

    assert((m2.get(0) !? "0") == "1")
    assert((m2.get(2) !? "0") == "2")
    assert((m2.get(4) !? "0") == "3")
    assert((m2.get(1) !? "0") == "0")
}