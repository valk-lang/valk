+ fn request(method: String, url: String, headers: ?Map[String] (null)) ClientRequest {
    return ClientRequest.new(method, url, headers)
}

+ fn download(url: String, to_path: String, headers: ?Map[String] (null)) !failed {
    let req = ClientRequest.new("GET", url, headers)
    req.download(to_path) ! throw failed
}
