
header "sys" as sys

use io

struct Socket {
    static fn new_tcp(host: String, port: u16) SocketTCP !init_error {
        return SocketTCP.new(host, port) ! { throw init_error }
    }

    static fn close(fd: FD) void {
        #if OS == win
        sys:closesocket(fd @as uint)
        #else
        io:close(fd)
        #end
    }
}
