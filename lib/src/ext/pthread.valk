
#if OS == linux || OS == macos
struct pthread_t {
	data: uint
}

extern fn pthread_create(thread: pthread_t, attr: ?ptr, entry: ptr, data: ?ptr) i32;
extern fn pthread_join(thread: uint, exit_value: ?ptr) i32;

extern fn pthread_mutex_init(mutex: ptr, attr: ?ptr) i32;
extern fn pthread_mutex_destroy(mutex: ptr) i32;
extern fn pthread_mutex_lock(mutex: ptr) i32;
extern fn pthread_mutex_unlock(mutex: ptr) i32;
#end
