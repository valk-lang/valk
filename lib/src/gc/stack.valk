
use mem

value stack_size (100000)

struct Stack {
    base: ptr
    adr: ptr
    size: uint

    static fn new() Stack {
        let base = mem:alloc(stack_size)
        return Stack {
            base: base
            adr: base
            size: stack_size
        }
    }

    fn free() {
        mem:free(this.base)
        mem:free(this)
    }
}
