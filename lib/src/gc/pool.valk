
use mem

global pools: [?Pool x 64]
global alc_list: Bump

value POOL_DATA_OFFSET ((size_of(ptr) * 6.to(uint)))
value POOL_PUBLIC_OFFSET ((size_of(ptr) * 3))

value b_next (0)
value b_slots_total (1)
value b_slots_used_percent (2)
value b_slots_used (3)
value b_props (4)
value b_onfree (5)

fn pools_init() {
    alc_list = Bump.new(64)
    //
    let list : *[?Pool] = @ref(pools)
    let i : uint = size_of(ptr)
    let c : uint = 0
    let until : uint = 16 * size_of(ptr)
    while i <= until {
        let pool = Pool.init(i, null, null)
        list[c++] = pool
        alc_list.add_ptr(pool)
        i += size_of(ptr)
    }
    i = 16 * size_of(ptr) * 2
    while i <= 2147483648 {
        let pool = Pool.init(i, null, null)
        list[c++] = pool
        alc_list.add_ptr(pool)
        i *= 2
    }
}

fn pools_free() {
    let adr = alc_list.data
    let end = adr + alc_list.index
    while adr < end {
        let alc = @ptrv(adr, Pool)
        adr += size_of(ptr)
        alc.free()
    }
    alc_list.free()
}

fn get_allocator(ref: *?Pool, size: uint, props: ?fnptr()(), onfree: ?fnptr()()) Pool {
    let p = ref[0]
    if isset(p) : return p
    p = Pool.init(size, props, onfree)
    alc_list.add_ptr(p)
    return p
}

fn get_pool_index_for_size(size: uint) uint {
    let until : uint = 16 * size_of(ptr)
    if size <= until {
        let index = size / size_of(ptr)
        if index * size_of(ptr) == size : index--
        return index
    }
    let i : uint = 16
    let isize = until * 2
    while isize < size {
        i++
        isize *= 2
    }
    return i
}

fn get_pool_for_size(size: uint) Pool {
    let until : uint = 16 * size_of(ptr)
    if size <= until {
        let index = size / size_of(ptr)
        if index * size_of(ptr) == size : index--
        return get_pool(index, size)
    }
    let i : uint = 16
    let isize = until * 2
    while isize < size {
        i++
        isize *= 2
    }
    return get_pool(i, isize)
}

fn get_pool(i: uint, size: uint) Pool {
    let pool = @ptrv(pools, ?Pool, i)
    if isset(pool) : return pool
    pool = Pool.init(size, null, null)
    @ptrv(pools, Pool, i) = pool
    return pool
}

fn reset_pools(pools: ptr, poolc: uint) {
    let adr = alc_list.data
    let end = adr + alc_list.index
    while adr < end {
        let alc = @ptrv(adr, Pool)
        adr += size_of(ptr)
        alc.reset()
    }
}

fn leak_check_pools(pools: ptr, poolc: uint) {
    let adr = alc_list.data
    let end = adr + alc_list.index
    while adr < end {
        let alc = @ptrv(adr, Pool)
        adr += size_of(ptr)
        alc.leak_check()
    }
}

