
global mem_new : uint
global mem_trigger : uint

value mem_minimum_trigger (8192)

fn update_usage() {
    // Calculate mem usage
    if mem_new > mem_trigger : gc()
}

fn gc() {
}

struct GcLocal {

    pub static fn init() GcLocal {

        pools_init()

        mem_trigger = mem_minimum_trigger

        return GcLocal {
        }
    }

    pub fn shutdown() {
    }
}
