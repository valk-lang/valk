
struct Idf {
    for: int
    type: ?Type (null)
    value: ?Value (null)
    decl: ?Decl (null)
    func: ?Func (null)
    class: ?Class (null)

    static fn for_type(type: Type) Idf {
        return Idf {
            for: idf_type
            type: type
        }
    }

    static fn for_func(func: Func) Idf {
        return Idf {
            for: idf_func
            func: func
        }
    }
}