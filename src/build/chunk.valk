
struct Chunk {
    build: Build
    fc: ?Fc
    content: String
    i: uint
    line: uint
    col: uint

    static fn new(build: Build, content: String, fc: ?Fc) Chunk {
        return Chunk {
            build: build
            fc: fc
            content: content
            i: 0
            line: 1
            col: 1
        }
    }
    
}
