
struct Decl {
    type: Type
    ir_name: String ("-nameless-")
    ir_imut_value: String ("")
    offset: uint (0)
    is_arg: bool
    is_gc: bool
    is_mut: bool (false)
    is_retv: bool (false)

    static fn new(type: Type, is_arg: bool) Decl {
        let is_gc = type.is_gc()
        return Decl {
            type: type
            is_arg: is_arg
            is_gc: is_gc
            // is_mut: is_gc
        }
    }
}

