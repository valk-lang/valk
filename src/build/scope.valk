
struct Scope {
    parent: ?Scope
    identifiers: Map[Idf] (map[Idf]{})
    func: ?Func (null)

    static fn new(parent: ?Scope) Scope {
        let f: ?Func = null
        if isset(parent) {
            f = parent.func
        }
        return Scope{
            parent: parent
            func: f
        }
    }
}