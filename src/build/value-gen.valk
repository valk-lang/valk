fn vgen_class_init(class: Class, values: Map[Value]) Value {

    let rett = class.get_type()
    let init = rett.is_gc() ? <{
        // Class
        let b = class.build
        let func = b.valk_func("gc", "pool_alloc")
        let vt = class.vtable_nr_global
        if !isset(vt) : class.build.error("Missing vtable global variable (bug)")
        let values = array[Value]{ vgen_int(class.size @as int, b.valk_type("type", "uint")), vgen_global(vt) }
        let call = vgen_func_call(b, vgen_func_ptr(func), values)
        return call
    } : <{
        // Struct
        let b = class.build
        let func = b.valk_func("mem", "alloc")
        let values = array[Value]{ vgen_int(class.size @as int, b.valk_type("type", "uint")) }
        let call = vgen_func_call(b, vgen_func_ptr(func), values)
        return call
    }

    return Value {
        type: v_class_init
        values_map: values
        value1: init
        rett: rett
    }
}

fn buffer_values(scope: Scope, values: Array[Value]) {
    each values as i, v {
        if v.rett.is_gc() {
            v = vgen_buffer(scope, v)
            values.set(i, v) _
        }
    }
}
fn buffer_values_map(scope: Scope, values: Map[Value]) {
    each values as k, v {
        if v.rett.is_gc() {
            v = vgen_buffer(scope, v)
            values.set(k, v)
        }
    }
}

fn vgen_buffer(scope: Scope, value: Value) Value {
    let decl = Decl.new(value.rett, false)
    scope.add_decl(decl)
    return Value {
        type: v_buffer
        value1: value
        decl: decl
        rett: value.rett
    }
}

