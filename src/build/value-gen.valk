fn vgen_func_call(b: Build, on: Value, values: Array[Value]) Value {

    let func_info = on.rett.func_info
    if !isset(func_info) : build_error("Function call on a non-function value")

    return Value {
        type: v_func_call
        value1: on
        values: values
        rett: func_info.rett_eax() ? type_void(b)
    }
}

