
use helper

fn run(args: Array[String]) {

    let has_value = array[String]{ "o", "target", "def" }
    let cli = helper:parse_cli_args(args, has_value)

    let files = array[String]{}
    each cli.inputs as arg {
        if arg.ends_with(".valk") {
            files.push(arg)
            continue
        }
    }

    each files as file {
        println(file)
    }

}
