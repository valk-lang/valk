
extend Lsp {
    get is_completion : bool { return this.method == "textDocument/completion" }
    get is_definition : bool { return this.method == "textDocument/definition" }
    get is_sig_help : bool { return this.method == "textDocument/signatureHelp" }
    get is_diag : bool { return this.method == "textDocument/didSave" }
    get is_fmt : bool { return this.method == "textDocument/formatting" }
}