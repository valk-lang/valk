
use valk:fs

fn main() {
    let path : fs:Path = "."
    path = path.add("folder1").add("folder2/").add("/file")
    println(path) // ./folder1/folder2/file
    path = path.resolve()
    println(path) // /var/www/folder1/folder2/file
    // path = path + ".exe"
    // println(path) // /var/www/folder1/folder2/file.exe
    path = path.pop()
    println(path) // /var/www/folder1/folder2
}
